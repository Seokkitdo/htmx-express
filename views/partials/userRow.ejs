<!-- user_row.ejs -->
<tr class="text-gray-700" id="userRow-<%= user.id %>">
  <td class="px-4 py-3 border-b border-gray-200 bg-gray-50 font-medium text-sm">
    <%= user.id %>
  </td>
  <td class="px-4 py-3 border-b border-gray-200 bg-gray-50 font-medium text-sm">
    <%= user.name %>
  </td>
  <td class="px-4 py-3 border-b border-gray-200 bg-gray-50 text-sm">
    <%= user.age %>
  </td>
  <td class="px-4 py-3 border-b border-gray-200 bg-gray-50 text-sm">
    <%= user.role %>
  </td>
  <td class="px-4 py-3 border-b border-gray-200 bg-gray-50 text-sm">
    <button
      hx-get="/dashboard/user/edit/<%= user.id %>"
      hx-trigger="click"
      hx-target="#userRow-<%= user.id %>"
      hx-swap="outerHTML"
      class="px-4 py-2 text-sm text-white bg-red-600 rounded hover:bg-red-500"
    >
      Edit
    </button>
  </td>
  <td class="px-4 py-3 border-b border-gray-200 bg-gray-50 text-sm">
    <button
      hx-delete="/dashboard/user/<%= user.id %>"
      hx-trigger="click"
      hx-target="#userRow-<%= user.id %>"
      hx-swap="outerHTML"
      class="px-4 py-2 text-sm text-white bg-red-600 rounded hover:bg-red-500"
    >
      삭제
    </button>
  </td>
</tr>
